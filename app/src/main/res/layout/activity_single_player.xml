<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tictactoe.SinglePlayer">

    <View
        android:id="@+id/background_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-24dp"
        android:alpha="0.4"
        android:background="@drawable/background_one"
        tools:ignore="RtlHardcoded" />

    <View
        android:id="@+id/back"
        android:layout_width="41dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/back"
        tools:ignore="RtlHardcoded"
        android:onClick="goBack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/select_player"
        style="@style/select_player"
        android:id="@+id/select_player_text_view" />

    <CheckBox
        android:background="#FFFFFF"
        android:id="@+id/x_player_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/select_player_text_view"
        android:layout_alignStart="@+id/select_player_text_view"
        android:layout_alignTop="@+id/x_player"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="36dp" />

    <View
        android:id="@+id/x_player"
        android:layout_width="143dp"
        android:layout_height="137dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/x_player"
        android:elevation="4dp" />

    <CheckBox
        android:background="#FFFFFF"
        android:id="@+id/o_player_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/select_player_text_view"
        android:layout_alignStart="@+id/select_player_text_view"
        android:layout_alignTop="@+id/o_player"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="36dp" />

    <View
        android:id="@+id/o_player"
        android:layout_width="143dp"
        android:layout_height="137dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="320dp"
        android:background="@drawable/o_player"
        android:elevation="4dp" />

    <Button
        android:id="@+id/single_player"
        android:layout_width="256dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttons"
        android:elevation="4dp"
        android:text="@string/play"
        android:onClick="play"
        android:textAppearance="@style/play_button" />

</android.widget.RelativeLayout>
